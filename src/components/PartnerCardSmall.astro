---
export interface Props {
    name: string;
    title: string;
    phone: string;
    email: string;
    content: string;
    linkedin: string;
}

const { name, title, phone, email, content, linkedin } = Astro.props as Props;
---

<div
    class="bg-gray-50 p-4 rounded-sm shadow-md mt-4 flex gap-2 scroll-my-20"
    id={name.replace(" ", "")}
>
    <div>
        <div class="text-2xl font-semibold text-gray-700">
            {name}
        </div>
        <div class="text-purple-900 font-semibold mb-2">{title}</div>
        <div class="text-xs text-purple-900">
            <div class="mt-2 text-xs">+1 {phone}</div>
            <!-- <span class="">/</span> -->
            <div class="mt-2 text-xs">{email}</div>
        </div>
        <div class="text-sm text-gray-600 py-4">
            {content}
        </div>
        <div class="flex gap-2">
            <a
                href={"mailto:" + email}
                target="_blank"
                rel="noopener noreferrer"
                class="bg-gray-200 p-1 rounded-sm hover:bg-gray-300 transition duration-200"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="icon icon-tabler icon-tabler-mail"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    stroke="#2c3e50"
                    fill="none"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><path d="M0 0h24v24H0z" stroke="none"></path><rect
                        x="3"
                        y="5"
                        width="18"
                        height="14"
                        rx="2"></rect><path d="m3 7 9 6 9-6"></path>
                </svg>
            </a>
            <a
                href={linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="bg-gray-200 p-1 rounded-sm hover:bg-gray-300 transition duration-200"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="icon icon-tabler icon-tabler-brand-linkedin"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    stroke="#2c3e50"
                    fill="none"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><path d="M0 0h24v24H0z" stroke="none"></path><rect
                        x="4"
                        y="4"
                        width="16"
                        height="16"
                        rx="2"></rect><path
                        d="M8 11v5M8 8v.01M12 16v-5M16 16v-3a2 2 0 0 0-4 0"
                    ></path>
                </svg>
            </a>

            <a
                href={"/partners#" + name.replace(" ", "")}
                class="text-xs bg-gray-200 py-1 px-2 ml-auto rounded-sm hover:bg-gray-300 flex items-center btn"
            >
                <span>Learn More</span>
                <span class="btnIcon">
                    <svg
                        class="w-3 h-3 ml-2"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="m14 5 7 7m0 0-7 7m7-7H3"></path>
                    </svg>
                </span>
            </a>
        </div>
    </div>
</div>

<style>
    .btn {
        overflow: hidden;
        max-width: 5.5rem;
        transition: all 0.5s ease-in-out;
        white-space: nowrap;
    }
    .btn:hover {
        max-width: 20rem;
        transition: all 0.5s ease-in-out;
    }
</style>
