---
export interface Props {
    title: string;
}

const { title } = Astro.props as Props;
---

<section
    class="relative mt-14 py-14 text-6xl font-semibold text-gray-100 bg-[url('/img/page-title-bg.jpg')] bg-cover bg-center"
>
    <div class="absolute w-full h-full bg-slate-900 opacity-80 top-0"></div>
    <div class="max-w-4xl mx-auto z-10 relative px-4 md:px-0">
        <h1>{title}</h1>
    </div>
</section>
