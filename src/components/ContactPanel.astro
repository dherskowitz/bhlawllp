---
import { Image } from 'astro:assets';
import contactImage from '../img/contact.jpg';
---

<section>
    <div class="flex max-w-4xl mx-auto rounded-sm shadow-md my-10">
        <div class="w-1/3 brightness-75 min-h-max hidden sm:block">
            <Image src={contactImage} alt="Contact Section Image" class="object-cover h-full"/>
        </div>
        <div class="bg-gray-200 w-full md:w-2/3 space-y-4">
            <div class="p-4 flex justify-between flex-col md:flex-row space-y-4 md:space-y-0 text-center md:text-left">
                <div>
                    <div class="text-lg font-semibold text-purple-900">Phone</div>
                    <div class="text-xs text-gray-600">+1 718-782-1500</div>
                </div>
                <div>
                    <div class="text-lg font-semibold text-purple-900">Email</div>
                    <div class="text-xs text-gray-600">
                        <a href="mailto:info@bhllplaw.com">info@bhllplaw.com</a>
                    </div>
                </div>
                <div>
                    <div class="text-lg font-semibold text-purple-900">Our Address</div>
                    <address class="text-xs text-gray-600">
                        268 Willoughby Avenue <br />
                        Brooklyn, NY 11205
                    </address>
                </div>
            </div>
            <iframe
                src="https://www.google.com/maps/embed/v1/place?q=Breuer+Herskowitz+LLP,+268+Willoughby+Ave,+Brooklyn,+NY+11205,+USA&key=AIzaSyBFw0Qbyq9zTFTd-tUY6dZWTgaQzuU17R8"
                class="w-full"
                height="450"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                title="Breuer Herskowitz Map"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>
</section>
