---
import ContactPanel from "../components/ContactPanel.astro";
import InfoCard from "../components/InfoCard.astro";
import Nav from "../components/Nav.astro";
import PageTitle from "../components/PageTitle.astro";
import SectionTitle from "../components/SectionTitle.astro";
import Layout from "../layouts/Layout.astro";

const team = [
  {
    name: "David Breuer",
    title: "Partner",
    staff_link: "/partners/david-breuer",
    email: "david@bhllplaw.com",
    linkedin: "https://linkedin.com/",
  },
  {
    name: "Jason Herskowitz",
    title: "Partner",
    staff_link: "/partners/jason-herskowitz",
    email: "jason@bhllplaw.com",
    linkedin: "https://linkedin.com/",
  },
  {
    name: "Dan Weinberger",
    title: "Partner",
    staff_link: "/partners/dan-weinberger",
    email: "dan@bhllplaw.com",
    linkedin: "https://linkedin.com/",
  },
  {
    name: "Joseph Pomerantz",
    title: "Associate",
    staff_link: "/associates/joseph-pomerantz",
    email: "joseph@bhllplaw.com",
    linkedin: "https://linkedin.com/",
  },
];
---

<Layout title="Our Partners | Breuer Herskowitz LLP Attorneys at Law">
  <main>
    <Nav />
    <PageTitle title="Our Team" />
    <section class="bg-gray-50 py-12 px-4 md:px-0">
      <div class="max-w-4xl mx-auto space-y-4">
        <p>
          At Breuer Herskowitz LLP, our team brings a wealth of experience and a
          deep commitment to excellence in real estate law. Each partner
          embodies our firm's values of integrity, diligence, and innovation.
          Their extensive knowledge in residential and commercial real estate,
          estate planning, and real estate financing ensures that our clients
          receive comprehensive legal advice tailored to their unique needs.
        </p><p>
          Our partners lead a team of dedicated attorneys who collaborate to
          deliver results that not only meet but exceed our clients'
          expectations. With a strong focus on the New York City area, our
          partners are well-versed in the intricacies of the local market,
          providing valuable insights and strategies to navigate the
          complexities of real estate transactions and estate planning in this
          dynamic region.
        </p>
      </div>
    </section>
    <section class="max-w-4xl mx-auto my-10">
      <div class="gap-4 mx-4">
        {
          team &&
            team.map((item, i) => (
              <div
                class="opacity-0 animate-fade-slide-up"
                style={`animation-delay: ${i * 300}ms; animation-fill-mode: forwards;`}
              >
                <InfoCard
                  name={item.name}
                  title={item.title}
                  staff_link={item.staff_link}
                  email={item.email}
                  linkedin={item.linkedin}
                />
              </div>
            ))
        }
      </div>
    </section>
    <section class="bg-gray-50 py-12 px-4 md:px-0">
      <div class="max-w-4xl mx-auto">
        <SectionTitle title="Contact Us" titleColor="text-gray-800" />
        <ContactPanel />
      </div>
    </section>
  </main>
</Layout>
